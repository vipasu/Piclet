/**
 * @author Charles
 * Gets photos (and their comments, likes, tags) from user's Facebook
 * and puts them into a file (array?) not sure about that yet.
 */


//Allows access to friends photos and albums
             
// Get your friend's albums, string friendID comes from the search. Can I set friendID = 'me' as default somehow?
function getPhotos(userID){
	FB.api('/' + userID + '/photos?limit=0', function(response){
		console.log('Photos', response);
		photoArray = [];
		for (var i = 0; i < response.data.length; i++){
			photoArray[i] = response.data[i];
		}
		return photoArray;
	});
};
function getTaggedPhotos(userID){
	FB.api('/' + userID + '/photos/uploaded?limit=0', function(response){
		console.log('Photos', response);
		photoArray = [];
		for (var i = 0; i < response.data.length; i++){
			photoArray[i] = response.data[i];
		}
	});
	return photoArray;
};

function getAllPhotos(userID){
	return getTaggedPhotos(userID).concat(getPhotos(userID));
}

