//Allows access to friends photos and albums
             
// Get your friend's albums, string friendID comes from the search. Can I set friendID = 'me' as default somehow?
var photoArray = [];
window.loadPhotos = function() {
	var end = 0;
  FB.api('/fql?q=SELECT object_id, src_small FROM photo WHERE object_id IN (SELECT object_id FROM photo_tag WHERE subject = me())', function(response) {
    for (var i=0; i < response.data.length; i++) {
      photoArray[i] = response.data[i];
      end++;
    }
      /*FB.api('/me/photos/uploaded?limit=0', function(response){
		for (var i = 0; i < response.data.length; i++){
			photoArray[end + i] = response.data[i];
		}
		alert(photoArray.length);
	});*/
	alert(photoArray.length);
	
  });

};

